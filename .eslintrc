{
    "settings": {
        "ecmascript": 6,
        "jsx": true
    },

    "ecmaFeatures": {
        "arrowFunctions": true,
        "restParams": true,
        "jsx": true,
        "modules": true,
        "blockBindings": true,
        "destructuring": true,
        "classes": true
    },

    "plugins": [
        "react"
    ],

    "rules": {
        "no-comma-dangle": 0,
        "no-underscore-dangle": 0,
        "quotes": 0,
        "semi": [2, "never"],
        "strict": 0,
        "react/jsx-uses-vars": 1,
        "react/display-name": 0,
        "react/jsx-quotes": 0,
        "react/jsx-no-undef": 1,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/no-did-mount-set-state": 1,
        "react/no-did-update-set-state": 1,
        "react/no-multi-comp": 0,
        "react/prop-types": 1,
        "react/react-in-jsx-scope": 1,
        "react/self-closing-comp": 1,
        "react/wrap-multilines": 1
    },

    "globals": {
        "window": false,
        "document": false,
        "console": false,
        "setInterval": false,
        "setTimeout": false,

        "require": false,
        "module": false
    }
}
